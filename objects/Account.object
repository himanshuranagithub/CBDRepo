<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Phone_Must_Contain_10_Digits</fullName>
        <active>true</active>
        <description>Phone must be contain 10 digit number and not be blank</description>
        <errorConditionFormula>OR( ISBLANK( Phone ) , LEN( Phone ) &lt;&gt; 10 , NOT( ISNUMBER( Phone ) ) )</errorConditionFormula>
        <errorDisplayField>Phone</errorDisplayField>
        <errorMessage>Phone number must be 10 digit.</errorMessage>
    </validationRules>
</CustomObject>
